<html>
  <body>
    <div  class = "wrapper">
      <%= render "devise/shared/error_messages", resource: resource %>
      <h2 class="ml-3"><b>会員登録</b></h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
        <div class="field">
          <%= f.label :name,class:"mt-3 ml-3" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"mt-3 mb-3 ml-3 rounded" %>
        </div>  
        <div class="field">
          <%= f.label :email,class:"ml-3"  %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"mt-3 mb-3 ml-3 rounded"  %>
        </div>
      
        <div class="field">
          <%= f.label :password,class:"ml-3" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",class:"mt-3 mb-3 ml-3 rounded"  %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation,class:"ml-3" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"mt-3 mb-3 ml-3 rounded"  %>
        </div>
      
        <div class="actions">
          <%= f.submit "会員登録",class:"btn btn-secondary mt-4 ml-3" %>
        </div>
      <% end %>
      <div class="push"></div>
    </div>
    <%= render partial: "layouts/footer" %>  
  </body>
</html>
  

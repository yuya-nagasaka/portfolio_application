<h2 class="ml-3">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email,class:"ml-3" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"ml-3 mt-3 mb-3" %>
  </div>

  <div class="field">
    <%= f.label :password,class:"ml-3" %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"ml-3 mt-3 mb-3" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-success ml-3 mt-3 mb-3" %>
  </div>
<% end %>

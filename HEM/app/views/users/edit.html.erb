<div class = "col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12- mt-5" >
  <% if @user.errors.any? %>
    <h2><%= "エラーが発生しました" %></h2>
    <ol>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ol>
  <% end %>
  <%= form_with model:@user, url:"/users/#{@user.id}", local:true do |f| %>
    <h3 class = "mb-5"><span class ="border border-dark rounded pt-2 pb-2 pr-4 pl-4">名前</span></h3>
    <%= f.text_field:name,style:"width:125px" %>
    <h3 class = "mb-5 mt-5" ><span class ="border border-dark rounded pt-2 pb-2 pr-4 pl-4">画像</span></h3>
    <%= attachment_image_tag @user, :image, size: '75x75', fallback: "user.png", class: "mt-4" %></br>
    <%= f.attachment_field:image, class: "mt-4" %>
    <h3 class = "mb-5 mt-5" ><span class ="border border-dark rounded pt-2 pb-2 pr-3 pl-3">紹介文</span></h3>
    <%= f.text_area:introduction,style:"width:300px;height:300px"%></br>
    <%= f.submit "保存", class: "btn btn-secondary mt-4",style:"width:300px" %>
  <% end %>
</div>
<div class = "container">
  <div class = "row">
    <div class =  "col-xs-3 col-sm-3 col-md-3 col-lg-3 col-xl-3">
      <%= form_with model:@recipe, local:true do |f| %>
        <h4 class = "mb-5 mt-5">レシピ名</h2>
        <%= f.text_field :name,:readonly => true %>
        <h4 class = "mb-5 mt-5">調理手順</h2>
        <%= f.text_area :method,:size => "23x15",:readonly => true %></br>
      <% end %>
    </div>
    <div class = "col-xs-7 col-sm-7 col-md-7 col-lg-7 col-xl-7 ml-3">
      <h4 class = "mb-5 mt-5">使用食材</h4>
      <table>
        <thead>
          <tr>
            <td>食材</td>
            <td>分量</td>
          </tr>
        </thead>
        <tbody>
          <% recipe_ingredients = @recipe.recipe_ingredients %>
          <% recipe_ingredients.each do |recipe_ingredient| %>
            <tr class = "border-top border-bottom  border-dark">
              <td class = "pt-2 pb-2"><%= recipe_ingredient.ingredient.name %></td>
              <%= form_with model:recipe_ingredient, local:true do |f| %>
                <td class = "pt-2 pb-2"><%= f.text_field :quantity,:size => "5",:readonly => true %> g </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>